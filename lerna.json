{
    "$schema": "node_modules/lerna/schemas/lerna-schema.json",
    "version": "independent",
    "packages": ["libs/*"],
    "concurrency": 1,
    "stream": true,
    "npmClient": "npm",
    "changelog": true,
    "private": false,
    "conventionalCommits": true,
    "ignoreChanges": [
        "**/node_modules/**",
        "**/dist/**",
        "**/tests/**",
        "**/*.spec.ts",
        "**/apps/**",
        "**/.github/**",
        "**/scripts/**",
        "**/CHANGELOG.md",
        "**/project.json",
        "**/ng-packages.json"
    ],
    "command": {
        "version": {
            "commitHooks": false,
            "createRelease": "github"
        },
        "publish": {
            "yes": true,
            "registry": "https://registry.npmjs.org",
            "message": "chore(release): update CHANGELOG.md [ci skip]"
        }
    }
}
