{
    "name": "demo",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "projects/{projectName}",
    "projectType": "application",
    "prefix": "app",
    "targets": {
        "build": {
            "executor": "@nx/angular:application",
            "outputs": ["{workspaceRoot}/dist/demo"],
            "options": {
                "baseHref": "/",
                "outputPath": "dist/{projectName}",
                "index": "{projectRoot}/src/index.html",
                "browser": "{projectRoot}/src/main.ts",
                "polyfills": ["./apps/demo/src/polyfills.ts"],
                "tsConfig": "{projectRoot}/tsconfig.app.json",
                "styles": [
                    "node_modules/@taiga-ui/core/styles/taiga-ui-theme.less",
                    "node_modules/@taiga-ui/core/styles/taiga-ui-fonts.less",
                    "apps/demo/src/styles.css",
                    "node_modules/prismjs/themes/prism-okaidia.css"
                ],
                "scripts": [
                    "node_modules/marked/marked.min.js",
                    "node_modules/prismjs/prism.js",
                    "node_modules/prismjs/components/prism-less.min.js",
                    "node_modules/prismjs/components/prism-markup.min.js",
                    "node_modules/prismjs/components/prism-typescript.min.js"
                ],
                "server": "{projectRoot}/src/main.server.ts",
                "ssr": {
                    "entry": "{projectRoot}/src/server.ts"
                },
                "outputMode": "server",
                "loader": {
                    ".md": "text",
                    ".html": "text",
                    ".less": "text",
                    ".svg": "text"
                },
                "assets": [
                    {
                        "glob": "**/*",
                        "input": "apps/demo/src/assets/",
                        "output": "./assets/"
                    },
                    {
                        "glob": "**/*",
                        "input": "node_modules/@taiga-ui/icons/src",
                        "output": "assets/taiga-ui/icons"
                    },
                    {
                        "glob": "**/logo.svg",
                        "input": "libs/",
                        "output": "assets/logos/"
                    },
                    {
                        "glob": "manifest.webmanifest",
                        "input": "apps/demo/src/",
                        "output": "/"
                    }
                ],
                "plugins": ["apps/demo/esbuild-plugins/ng-web-apis-as-taiga-ui-dep.plugin.js"],
                "serviceWorker": false
            },
            "configurations": {
                "development": {
                    "optimization": false,
                    "extractLicenses": false,
                    "sourceMap": true,
                    "server": false,
                    "ssr": false,
                    "outputMode": "static"
                },
                "production": {
                    "fileReplacements": [
                        {
                            "replace": "apps/demo/src/environments/environment.ts",
                            "with": "apps/demo/src/environments/environment.prod.ts"
                        }
                    ],
                    "tsConfig": "{projectRoot}/tsconfig.app.prod.json",
                    "serviceWorker": "apps/demo/ngsw-config.json",
                    "outputHashing": "all",
                    "outputMode": "server"
                }
            },
            "defaultConfiguration": "production"
        },
        "serve": {
            "continuous": true,
            "executor": "@nx/angular:dev-server",
            "options": {
                "prebundle": false
            },
            "configurations": {
                "production": {
                    "buildTarget": "{projectName}:build:production"
                },
                "development": {
                    "buildTarget": "{projectName}:build:development"
                }
            },
            "defaultConfiguration": "development"
        },
        "build-firebase-preview": {
            "executor": "nx:run-commands",
            "options": {
                "parallel": false,
                "commands": ["nx build demo", "mv dist/demo/browser/index.csr.html dist/demo/browser/index.html"]
            }
        },
        "build-gh-pages": {
            "executor": "nx:run-commands",
            "options": {
                "parallel": false,
                "commands": [
                    "nx build demo --base-href /ng-web-apis/",
                    "mv dist/demo/browser/index.csr.html dist/demo/browser/index.html",
                    "cp dist/demo/browser/index.html dist/demo/browser/404.html"
                ]
            }
        }
    }
}
